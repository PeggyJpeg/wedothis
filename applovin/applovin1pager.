    <p class="disclaimer">
      <strong>End of Report.</strong> This document is for informational purposes only. All financial data is sourced from reputable API providers and should be independently verified. Market conditions and company performance can change rapidly. Please consult a financial professional before making investment decisions.
    </p>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      // --- Configuration ---
      const apiKey = "hQC5T9ehWTI6XB0kQ6enPU5YslmIa5wN"; // Demo API Key (Embedded)
      const ticker = "APP";
      const fmpBaseUrl = "https://financialmodelingprep.com/api/v3";

      // --- Global Storage for Fetched Data ---
      let fetchedData = {
        quote: null,
        balanceSheet: null,
        incomeStatementAnnual: null,
        incomeStatementTTM: null, // Will hold computed TTM EBITDA from quarterly data
        ratios: null,
        keyMetrics: null,
      };

      // --- Helper Functions ---
      const formatNumber = (num, decimals = 2) => {
        if (num === null || num === undefined || isNaN(num)) return "N/A";
        if (Math.abs(num) >= 1e12) return `$${(num / 1e12).toFixed(decimals)}T`;
        if (Math.abs(num) >= 1e9) return `$${(num / 1e9).toFixed(decimals)}B`;
        if (Math.abs(num) >= 1e6) return `$${(num / 1e6).toFixed(decimals)}M`;
        return `$${num.toLocaleString("en-US", {
          minimumFractionDigits: decimals,
          maximumFractionDigits: decimals,
        })}`;
      };

      const formatRatio = (num, suffix = "x") => {
        if (
          num === null ||
          num === undefined ||
          isNaN(num) ||
          !isFinite(num)
        )
          return "N/A";
        return `${num.toFixed(2)}${suffix}`;
      };

      const formatPercent = (num) => {
        if (
          num === null ||
          num === undefined ||
          isNaN(num) ||
          !isFinite(num)
        )
          return "N/A";
        return `${(num * 100).toFixed(2)}%`;
      };

      const updateElement = (id, value, formatter = null) => {
        const element = document.getElementById(id);
        if (element) {
          let displayValue = "N/A"; // Default if value is problematic
          if (value !== null && value !== undefined) {
            displayValue = formatter ? formatter(value) : value;
          }

          // Remove loading spinner if present
          const spinner = element.querySelector(".loading-spinner");
          if (spinner) {
            spinner.remove();
          }

          element.textContent = displayValue;
          element.classList.remove(
            "data-placeholder",
            "error-message",
            "success-message"
          );

          if (displayValue === "N/A") {
            element.classList.add("error-message");
          } else if (typeof value === "number" && value > 0) {
            element.classList.add("success-message");
          }
        }
      };

      // --- API Fetch Function ---
      const fetchData = async (url, description) => {
        try {
          console.log(`Fetching ${description} from: ${url}`);
          const response = await fetch(url);
          if (!response.ok) {
            throw new Error(
              `HTTP error! status: ${response.status} fetching ${description}`
            );
          }
          const data = await response.json();
          if (!data || (Array.isArray(data) && data.length === 0)) {
            console.warn(`No data received for ${description}`);
            return null;
          }
          console.log(`Successfully fetched ${description}`);
          return Array.isArray(data) ? data : data;
        } catch (error) {
          console.error(`Error fetching ${description}:`, error);
          return null;
        }
      };

      // --- Specific Data Fetchers ---
      const fetchQuoteData = async () => {
        const url = `${fmpBaseUrl}/quote/${ticker}?apikey=${apiKey}`;
        const data = await fetchData(url, "Quote Data");
        // Sometimes the API returns an array even if one quote exists
        fetchedData.quote = Array.isArray(data) ? data[0] : data;
      };

      const fetchBalanceSheetData = async () => {
        const url = `${fmpBaseUrl}/balance-sheet-statement/${ticker}?limit=1&apikey=${apiKey}`;
        fetchedData.balanceSheet = await fetchData(url, "Annual Balance Sheet");
      };

      const fetchIncomeStatementAnnualData = async () => {
        const url = `${fmpBaseUrl}/income-statement/${ticker}?limit=1&apikey=${apiKey}`;
        fetchedData.incomeStatementAnnual = await fetchData(
          url,
          "Annual Income Statement"
        );
      };

      // --- Fix for LTM EBITDA ---
      // Instead of using the possibly unreliable 'income-statement-ttm' endpoint,
      // we fetch the last 4 quarters of income statements and sum their "ebitda" fields.
      const fetchIncomeStatementTTMData = async () => {
        const url = `${fmpBaseUrl}/income-statement/${ticker}?period=quarter&limit=4&apikey=${apiKey}`;
        const quarterlyData = await fetchData(
          url,
          "Quarterly Income Statements"
        );
        if (quarterlyData && Array.isArray(quarterlyData) && quarterlyData.length) {
          const ttmEbitda = quarterlyData.reduce(
            (acc, cur) => acc + (cur.ebitda || 0),
            0
          );
          // Store the computed TTM EBITDA using the key "ebitdaTTM"
          fetchedData.incomeStatementTTM = { ebitdaTTM: ttmEbitda };
        } else {
          fetchedData.incomeStatementTTM = null;
        }
      };

      const fetchRatiosData = async () => {
        const url = `${fmpBaseUrl}/ratios/${ticker}?limit=1&apikey=${apiKey}`;
        fetchedData.ratios = await fetchData(url, "Financial Ratios");
      };

      const fetchKeyMetricsData = async () => {
        const url = `${fmpBaseUrl}/key-metrics/${ticker}?limit=1&apikey=${apiKey}`;
        fetchedData.keyMetrics = await fetchData(url, "Key Metrics");
      };

      // --- Update UI Functions ---
      const updateQuoteUI = () => {
        const quote = fetchedData.quote;
        if (!quote) return;
        updateElement("current-price", quote.price, (p) =>
          formatNumber(p, 2)
        );
        updateElement("current-price-ref", quote.price, (p) =>
          formatNumber(p, 2)
        );
        updateElement("market-cap", quote.marketCap, (m) =>
          formatNumber(m, 0)
        );
        updateElement("52wk-low", quote.yearLow, (p) =>
          formatNumber(p, 2)
        );
        updateElement("52wk-high", quote.yearHigh, (p) =>
          formatNumber(p, 2)
        );
        updateElement(
          "52wk-range",
          { low: quote.yearLow, high: quote.yearHigh },
          (range) =>
            `${formatNumber(range.low, 2)} - ${formatNumber(range.high, 2)}`
        );
        updateElement("eps-ttm", quote.eps, (e) =>
          formatNumber(e, 2)
        );
        updateElement("pe-ratio", quote.pe, formatRatio);
      };

      const updateFinancialsUI = () => {
        const bs = fetchedData.balanceSheet;
        const isAnnual = fetchedData.incomeStatementAnnual;
        const isTTM = fetchedData.incomeStatementTTM;
        const ratios = fetchedData.ratios;
        const keyMetrics = fetchedData.keyMetrics;

        if (bs) {
          updateElement("total-debt", bs.totalDebt, (d) =>
            formatNumber(d, 0)
          );
          updateElement(
            "cash-equivalents",
            bs.cashAndCashEquivalents,
            (c) => formatNumber(c, 0)
          );
          updateElement(
            "current-ratio",
            bs.totalCurrentAssets / bs.totalCurrentLiabilities,
            formatRatio
          );
        }

        if (isAnnual) {
          updateElement("latest-revenue", isAnnual.revenue, (r) =>
            formatNumber(r, 0)
          );
          updateElement("latest-ebitda", isAnnual.ebitda, (e) =>
            formatNumber(e, 0)
          );
        }

        if (isTTM) {
          // Use our computed quarterly-summed EBITDA for TTM
          updateElement("ltm-ebitda", isTTM.ebitdaTTM, (e) =>
            formatNumber(e, 0)
          );

          // Calculate interest coverage if data is available from TTM data
          if (isTTM.ebitttm && isTTM.interestExpensettm && isTTM.interestExpensettm !== 0) {
            updateElement(
              "interest-coverage",
              isTTM.ebitttm / isTTM.interestExpensettm,
              formatRatio
            );
          } else {
            updateElement("interest-coverage", null);
          }
        }

        if (ratios) {
          updateElement("peg-ratio", ratios.pegRatio, formatRatio);
        }
      };

      const calculateAndUpdateDerivedMetrics = () => {
        const quote = fetchedData.quote;
        const bs = fetchedData.balanceSheet;
        const isAnnual = fetchedData.incomeStatementAnnual;
        const isTTM = fetchedData.incomeStatementTTM;

        if (!quote || !bs) return;
        const marketCap = quote.marketCap;
        const totalDebt = bs.totalDebt;
        const cash = bs.cashAndCashEquivalents;
        const revenueAnnual = isAnnual?.revenue;
        const ebitdaAnnual = isAnnual?.ebitda;
        const ebitdaTTM = isTTM?.ebitdaTTM;

        if (
          totalDebt !== null &&
          totalDebt !== undefined &&
          cash !== null &&
          cash !== undefined
        ) {
          const netDebt = totalDebt - cash;
          updateElement("net-debt", netDebt, (n) =>
            formatNumber(n, 0)
          );

          if (marketCap !== null && marketCap !== undefined) {
            const enterpriseValue = marketCap + netDebt;
            updateElement(
              "enterprise-value",
              enterpriseValue,
              (ev) => formatNumber(ev, 0)
            );

            if (revenueAnnual && revenueAnnual !== 0) {
              updateElement(
                "ev-revenue-multiple",
                enterpriseValue / revenueAnnual,
                formatRatio
              );
            }

            if (ebitdaAnnual && ebitdaAnnual !== 0) {
              updateElement(
                "ev-ebitda-multiple",
                enterpriseValue / ebitdaAnnual,
                formatRatio
              );
            }
          }

          if (ebitdaTTM && ebitdaTTM !== 0) {
            updateElement(
              "leverage-ratio",
              netDebt / ebitdaTTM,
              formatRatio
            );
          }
        }
      };

      // --- Main Execution ---
      const loadAllDataAndUpdateUI = async () => {
        console.log("Starting data fetch process...");
        try {
          // Fetch all data concurrently
          await Promise.all([
            fetchQuoteData(),
            fetchBalanceSheetData(),
            fetchIncomeStatementAnnualData(),
            fetchIncomeStatementTTMData(), // Now uses quarterly data to compute TTM EBITDA
            fetchRatiosData(),
            fetchKeyMetricsData(),
          ]);

          console.log("All data fetched, updating UI...");
          updateQuoteUI();
          updateFinancialsUI();
          calculateAndUpdateDerivedMetrics();
          console.log("UI update complete");
        } catch (error) {
          console.error("Error in data loading process:", error);
          document.querySelectorAll(".data-placeholder").forEach((element) => {
            element.textContent = "Error loading data";
            element.classList.remove("data-placeholder");
            element.classList.add("error-message");
          });
        }
      };

      loadAllDataAndUpdateUI();
    });
  </script>
</body>
</html>
